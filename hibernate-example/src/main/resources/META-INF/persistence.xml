<persistence xmlns="http://java.sun.com/xml/ns/persistence"
             xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
             xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
             version="2.0">
    <persistence-unit name="com.bdpanajoto.hibernate_example.JPAPersistence">
        <properties>
            <property name="hibernate.dialect" value="org.hibernate.dialect.DerbyTenFiveDialect"/>
            <property name="javax.persistence.jdbc.driver" value="org.apache.derby.jdbc.EmbeddedDriver"/>
            <property name="javax.persistence.jdbc.url" value="jdbc:derby:/db/testdb.db;create=true"/>
        </properties>
    </persistence-unit>
</persistence>